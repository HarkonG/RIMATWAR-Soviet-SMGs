<?xml version="1.0" encoding="utf-8" ?>

<Defs>

  <!--===== 7.62×25mm Tokarev =====-->
  <ThingDef ParentName="BaseBullet">
    <defName>GN_Bullet_Tokarev</defName>
    <label>7.62×25mm Tokarev bullet</label>
    <graphicData>
      <texPath>Things/Projectile/Bullet_Small</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>10</damageAmountBase>
      <speed>65</speed>
    </projectile>
  </ThingDef>

  <!--===== PPD-40 =====-->
  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>GN_PPD</defName>
    <label>PPD-40</label>
    <description>The PPD is a submachine gun originally designed in 1934 by Vasily Degtyaryov. The PPD had a conventional wooden stock, fired from an open bolt, and was capable of selective fire. It was replaced by the PPSh-41.</description>
    <graphicData>
      <texPath>Things/Weapons/GN_PPD</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_SMG</soundInteract>
    <recipeMaker>
      <researchPrerequisite>BlowbackOperation</researchPrerequisite>
      <skillRequirements>
        <Crafting>4</Crafting>
      </skillRequirements>
    </recipeMaker>
    <statBases>
      <WorkToMake>11000</WorkToMake>
      <Mass>3.5</Mass>
      <AccuracyTouch>0.80</AccuracyTouch>
      <AccuracyShort>0.55</AccuracyShort>
      <AccuracyMedium>0.25</AccuracyMedium>
      <AccuracyLong>0.05</AccuracyLong>
      <RangedWeapon_Cooldown>1.0</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>30</Steel>
      <ComponentIndustrial>2</ComponentIndustrial>
      <WoodLog>20</WoodLog>
    </costList>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>GN_Bullet_Tokarev</defaultProjectile>
        <warmupTime>0.5</warmupTime>
        <range>24</range>
        <burstShotCount>9</burstShotCount>
        <ticksBetweenBurstShots>5</ticksBetweenBurstShots>
        <soundCast>GN_Shot_PPD</soundCast>
        <soundCastTail>GunTail_Light</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>grip</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
    <weaponTags>
      <li>SimpleGun</li>
    </weaponTags>
  </ThingDef>

