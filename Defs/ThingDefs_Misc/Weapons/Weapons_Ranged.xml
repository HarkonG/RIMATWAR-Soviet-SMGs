      <Mass>2.5</Mass>
      <AccuracyTouch>0.90</AccuracyTouch>
      <AccuracyShort>0.70</AccuracyShort>
      <AccuracyMedium>0.45</AccuracyMedium>
      <AccuracyLong>0.20</AccuracyLong>
