<?xml version="1.0" encoding="utf-8" ?>

<Defs>

  <!--===== PPD-40 bullet =====-->
  <ThingDef ParentName="BaseBullet">
    <defName>HRK_Bullet_PPD</defName>
    <label>PPD-40 bullet</label>
    <graphicData>
      <texPath>Things/Projectile/Bullet_Small</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>4</damageAmountBase>
      <speed>55</speed>
      <armorPenetrationBase>0.15</armorPenetrationBase>
    </projectile>
  </ThingDef>

  <!--===== PPD-40 =====-->
  <ThingDef ParentName="HRK_RimAtWar_SovietUnion_BaseHumanMakeableGun">
    <defName>HRK_PPD</defName>
    <label>PPD-40</label>
    <description>The PPD is a submachine gun originally designed in 1934 by Vasily Degtyaryov. The PPD had a conventional wooden stock, fired from an open bolt, and was capable of selective fire. It was replaced by the PPSh-41.</description>
    <graphicData>
      <texPath>Things/Item/Equipment/WeaponRanged/HRK_PPD</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>HRK_Interact_PPSh</soundInteract>
    <recipeMaker>
      <researchPrerequisite>BlowbackOperation</researchPrerequisite>
      <skillRequirements>
        <Crafting>4</Crafting>
      </skillRequirements>
    </recipeMaker>
    <statBases>
      <WorkToMake>15000</WorkToMake>
      <Mass>3.2</Mass>
      <AccuracyTouch>0.85</AccuracyTouch>
      <AccuracyShort>0.50</AccuracyShort>
      <AccuracyMedium>0.30</AccuracyMedium>
      <AccuracyLong>0.10</AccuracyLong>
      <RangedWeapon_Cooldown>1.4</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>50</Steel>
      <ComponentIndustrial>3</ComponentIndustrial>
      <WoodLog>10</WoodLog>
    </costList>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>HRK_Bullet_PPD</defaultProjectile>
        <warmupTime>0.7</warmupTime>
        <range>20</range>
        <burstShotCount>6</burstShotCount>
        <ticksBetweenBurstShots>6</ticksBetweenBurstShots>
        <soundCast>HRK_Shot_PPD</soundCast>
        <soundCastTail>GunTail_Light</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>grip</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
    <weaponTags>
      <li>SimpleGun</li>
      <li>ShortShots</li>
    </weaponTags>
    <weaponClasses>
      <li>ShortShots</li>
      <li>RangedLight</li>
    </weaponClasses>
  </ThingDef>

