<?xml version="1.0" encoding="UTF-8"?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Muzzle Flash</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>

				<li Class="PatchOperationAddModExtension">
					<xpath>Defs/ThingDef[defName="HRK_PPD" or defName="HRK_PPShM" or defName="HRK_PPSh" or defName="HRK_PPS"]</xpath>
					<value>
						<li Class="MuzzleFlash.MuzzleFlashProps">
							<def>MF_StandardMuzzleFalshThree</def>
							<drawSize>(0.4,0.4)</drawSize>
							<offsets>
								<li>(0.52,0.03)</li>
							</offsets>
						</li>
					</value>
				</li>

			</operations>
		</match>
	</Operation>
</Patch>